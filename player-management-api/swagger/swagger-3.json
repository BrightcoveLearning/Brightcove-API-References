                          "branches":
                          {
                            "type": "object",
                            "description": "The branches of the player - contains objects for the preview and master (published) player",
                            "properties":
                            {
                              "preview":
                              {
                                "type": "object",
                                "description": "The preview player branch",
                                "properties":
                                {
                                  "configuration":
