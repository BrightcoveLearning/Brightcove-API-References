                                  },
                                  "template_updated_at":
                                  {
                                    "type": "string",
                                    "description": "date-time of last update to preview player template"
                                  },
                                  "preview_url":
                                  {
                                    "type": "string",
                                    "description": "URL for the player"
                                  }
                                }
